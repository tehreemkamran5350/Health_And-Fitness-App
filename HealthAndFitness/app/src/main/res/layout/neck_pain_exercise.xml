            android:layout_below="@id/btn_neck_ex7"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/Black"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp"
