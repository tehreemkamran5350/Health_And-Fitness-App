<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/des"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <TextView
            android:id="@+id/tv_neck_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/neck_screen_text"
            android:textSize="40dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/ThemeColor"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn_neck_ex1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_style"
            android:layout_below="@id/tv_neck_title"
            android:text="Exercise 1"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:padding="8dp"
            android:textColor="@color/Black"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn_neck_ex2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_style"
            android:text="Exercise 2"
            android:layout_below="@id/btn_neck_ex1"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/Black"
            android:layout_marginTop="8dp"
            />
        <Button
            android:id="@+id/btn_neck_ex3"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_style"
            android:text="Exercise 3"
            android:layout_below="@id/btn_neck_ex2"
            android:textSize="17dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textColor="@color/Black"
            android:layout_marginTop="8dp"
            />
        <Button
            android:id="@+id/btn_neck_ex4"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_style"
